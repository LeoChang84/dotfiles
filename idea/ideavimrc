let mapleader = ' '

set number
set incsearch hlsearch
set ignorecase smartcase
set clipboard=unnamed
set showmode
set surround

nnoremap 0 ^
nnoremap ^ 0

nnoremap Y y$
nnoremap Q @q

nnoremap <leader>q  :action CloseActiveTab<CR>
nnoremap ]f :action GotoNextError<CR>
nnoremap [f :action GotoPreviousError<CR>
